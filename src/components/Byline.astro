---
import FormattedDate from '@components/FormattedDate.astro'
import { uiStrings } from '@i18n/uiStrings'
interface Props {
  pubDate: Date
  updatedDate: Date
  className?: string
}
const { pubDate, updatedDate, className = '' } = Astro.props
const postLastUpdatedOn = `${uiStrings.postLastUpdatedOn[Astro.currentLocale]} `
---

<p class={className}>
  <FormattedDate date={pubDate} />
  {
    updatedDate && (
      <span>
        {postLastUpdatedOn} <FormattedDate date={updatedDate} />
      </span>
    )
  }
</p>
