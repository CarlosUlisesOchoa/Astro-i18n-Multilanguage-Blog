---
interface Props {
  date: Date
  className?: string
}
const { date, className = '' } = Astro.props
const lang = Astro.currentLocale
---

<time class={className} datetime={date.toISOString()}>
  {
    date.toLocaleDateString(lang, {
      year: 'numeric',
      month: 'long',
      day: 'numeric',
    })
  }
</time>
