---
import { cn } from '@src/libs/utils'

interface Props {
  href: string
  className?: string
}

const { href, className = '' } = Astro.props
const { pathname } = Astro.url
const ariaCurrent = href === pathname || href === pathname.replace(/\/$/, '') ? 'page' : ''
---

<li>
  <a
    href={href}
    class={cn('text-nowrap', className)}
    aria-current={ariaCurrent ? ariaCurrent : undefined}
  >
    <slot />
  </a>
</li>

<style>
  a[aria-current='page'] {
    color: hsl(var(--foreground));
    font-weight: 700;
  }
</style>
